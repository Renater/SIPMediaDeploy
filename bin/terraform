#!/bin/bash
set -eo pipefail

# Load terraform configuration
source env.d/terraform
export OS_AUTH_URL \
    OS_USERNAME \
    OS_PASSWORD \
    OS_REGION_NAME \
    OS_PROJECT_DOMAIN_ID \
    OS_USER_DOMAIN_NAME \
    OS_PROJECT_ID \
    OS_PROJECT_NAME \
    OS_INTERFACE \
    OS_IDENTITY_API_VERSION

# Launch terraform
cd terraform
terraform "$@"
